<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayRatingsActivity">
    <ImageView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:id="@+id/productImageId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        />
   <LinearLayout
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:id="@+id/LL2Id"
       android:layout_below="@+id/LL1Id"

       >
       <TextView
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:layout_marginTop="8dp"
           android:layout_marginBottom="8dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Product Description :"
           android:textSize="20sp"
           android:textStyle="bold"
           />
       <TextView
           android:id="@+id/productDescriptionId"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:layout_marginBottom="8dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="20sp"
           android:textStyle="italic"
           />


   </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/LL3Id"
        android:layout_below="@+id/LL2Id"

        >
        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Rating :"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/productRatingId"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="italic"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/productImageId"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/LL1Id"

        >
        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name :"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/productNameId"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="italic"
            />


    </LinearLayout>




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LL3Id"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"

        android:text="Add to Cart"
        android:drawableStart="@drawable/ic_baseline_add_shopping_cart_24"
        style="@style/Theme.MaterialComponents.BottomSheetDialog"
        android:background="@color/tfe_color_primary"
        android:textColor="#ffff"
        android:padding="10dp"
        android:onClick="onClick">

    </Button>

</RelativeLayout>